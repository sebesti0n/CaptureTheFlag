<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CreateEventFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingBottom="10dp">
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusTopStart="7dp"
        app:boxCornerRadiusBottomEnd="7dp"
        app:boxCornerRadiusBottomStart="7dp"
        app:boxCornerRadiusTopEnd="7dp"
        app:hintAnimationEnabled="true"
        android:autofillHints="text"
        app:boxStrokeWidth="3dp"
        app:boxStrokeColor="@color/green"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:paddingHorizontal="5dp"
            android:layout_height="52dp"
            android:hint="Title of the Hunt"
            android:textSize="15sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusTopStart="7dp"
        app:boxCornerRadiusBottomEnd="7dp"
        app:boxCornerRadiusBottomStart="7dp"
        app:boxCornerRadiusTopEnd="7dp"
        app:hintAnimationEnabled="true"
        android:autofillHints="text"
        app:boxStrokeWidth="3dp"
        app:boxStrokeColor="@color/green"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_orgnisation"
            android:layout_width="match_parent"
            android:paddingHorizontal="5dp"
            android:layout_height="52dp"
            android:hint="Name of the Organisation"
            android:textSize="15sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusTopStart="7dp"
        app:boxCornerRadiusBottomEnd="7dp"
        app:boxCornerRadiusBottomStart="7dp"
        app:boxCornerRadiusTopEnd="7dp"
        app:hintAnimationEnabled="true"
        android:autofillHints="text"
        app:boxStrokeWidth="3dp"
        app:boxStrokeColor="@color/green"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_description"
            android:layout_width="match_parent"
            android:paddingHorizontal="5dp"
            android:minHeight="52dp"
            android:layout_height="wrap_content"
            android:hint="Description of Hunt(e.g- contact Details)"
            android:textSize="15sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusTopStart="7dp"
        app:boxCornerRadiusBottomEnd="7dp"
        app:boxCornerRadiusBottomStart="7dp"
        app:boxCornerRadiusTopEnd="7dp"
        app:hintAnimationEnabled="true"
        android:autofillHints="text"
        app:boxStrokeWidth="3dp"
        app:boxStrokeColor="@color/green"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:paddingHorizontal="5dp"
            android:layout_height="52dp"
            android:hint="Location"
            android:textSize="15sp"

            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        app:boxCornerRadiusTopStart="7dp"
        app:boxCornerRadiusBottomEnd="7dp"
        app:boxCornerRadiusBottomStart="7dp"
        app:boxCornerRadiusTopEnd="7dp"
        app:hintAnimationEnabled="true"
        android:autofillHints="text"
        app:boxStrokeWidth="3dp"
        app:boxStrokeColor="@color/green"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_prizes"
            android:layout_width="match_parent"
            android:paddingHorizontal="5dp"
            android:layout_height="52dp"
            android:hint="Prizes"
            android:textSize="15sp"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>
    
</LinearLayout>
</ScrollView>