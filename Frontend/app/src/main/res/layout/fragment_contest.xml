<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ContestFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/end_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        app:layout_constrainedHeight="true"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/image"
                android:id="@+id/refresh_button"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_refresh"
                android:layout_marginEnd="20dp"
                android:layout_width="40dp"
                android:background="@drawable/roundcorner_for_refresh_button"
                android:layout_height="40dp">

            </ImageButton>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:src="@drawable/dcc_flag"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                app:shapeAppearanceOverlay="@style/ImageView.Rounded"
                android:layout_height="250dp"
                android:id="@+id/image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/question_tv"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginEnd="16dp"
                android:text="Kavi Khalique is the CP Lead of Developers and Coders Club, National Institute of Technology Agartala."
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/til_correctAnswer"
                app:layout_constraintTop_toBottomOf="@+id/question_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:boxStrokeColor="@color/blue_darkest"
                app:hintTextColor="@color/blue_darkest"
                app:boxStrokeWidth="3dp"
                android:layout_marginTop="20dp"
                app:boxCornerRadiusTopEnd="7dp"
                app:boxCornerRadiusTopStart="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusBottomEnd="7dp"
                android:layout_marginHorizontal="16dp"
                app:counterMaxLength="15"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:inputType="textShortMessage"
                    android:id="@+id/et_correctAnswer"
                    android:hint="Answer"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/til_unq_code"
                app:layout_constraintTop_toBottomOf="@+id/question_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:boxStrokeColor="@color/blue_darkest"
                app:hintTextColor="@color/blue_darkest"
                app:boxStrokeWidth="3dp"
                android:layout_marginTop="20dp"
                app:boxCornerRadiusTopEnd="7dp"
                android:visibility="gone"
                app:boxCornerRadiusTopStart="7dp"
                app:boxCornerRadiusBottomStart="7dp"
                app:boxCornerRadiusBottomEnd="7dp"
                android:layout_marginHorizontal="16dp"
                app:counterMaxLength="15"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:inputType="textShortMessage"
                    android:focusableInTouchMode="true"
                    android:id="@+id/et_unique_code"
                    android:hint="Unique Code"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="24dp"
                android:src="@drawable/ic_scan"
                android:layout_gravity="center"
                app:shapeAppearanceOverlay="@style/ImageView.Circle"
                android:layout_height="24dp"
                android:id="@+id/fabScan"
                app:layout_constraintBottom_toBottomOf="@+id/til_unq_code"
                app:layout_constraintTop_toTopOf="@+id/til_unq_code"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginVertical="6dp"
                android:layout_marginEnd="30dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/til_correctAnswer">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:id="@+id/hint1_card"
                    app:cardCornerRadius="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="#C0C0C0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hint 1"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:id="@+id/hint2_card"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#C0C0C0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hint 2"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:id="@+id/hint3_card"
                    android:layout_marginHorizontal="10dp"
                    app:cardCornerRadius="5dp"
                    android:backgroundTint="#C0C0C0">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hint 3"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.google.android.material.button.MaterialButton
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cornerRadius="12dp"
        android:backgroundTint="@color/blue"
        android:text="Start"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/end_button"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>