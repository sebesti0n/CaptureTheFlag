<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_login">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:src="@drawable/banner_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardview"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:id="@+id/cardview"
        app:cardBackgroundColor="#20FFCA28"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="20dp"
                app:boxCornerRadiusTopStart="19dp"
                app:boxCornerRadiusBottomEnd="19dp"
                app:boxCornerRadiusBottomStart="19dp"
                app:boxCornerRadiusTopEnd="19dp"
                app:hintAnimationEnabled="true"
                android:autofillHints="emailAddress"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="@color/black">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="5dp"
                    android:layout_height="52dp"
                    android:hint="E-mail ID"
                    android:textSize="15dp"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                app:boxCornerRadiusTopStart="19dp"
                app:boxCornerRadiusBottomEnd="19dp"
                app:boxCornerRadiusBottomStart="19dp"
                app:boxCornerRadiusTopEnd="19dp"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:imeOptions="actionDone"
                    android:layout_height="52dp"
                    android:textSize="15dp"
                    android:hint="Password"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_registernow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User?Register Now"
                android:textColor="@color/black"
                android:textStyle="italic|bold"
                android:textSize="14sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cornerRadius="12dp"
                android:text="Login"
                android:textColor="@color/bgBlack"
                android:backgroundTint="#45F7A100"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>