<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/_d_render_grunge_style_interior_design">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:src="@drawable/screenshot_from_2023_12_13_20_30_07_removebg_preview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cardview"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="330dp"
        android:layout_height="350dp"
        android:id="@+id/cardview"
        app:cardBackgroundColor="#60919191"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="15dp"
        android:elevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.857">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="20dp"
                app:boxCornerRadiusTopStart="19dp"
                app:boxCornerRadiusBottomEnd="19dp"
                app:boxCornerRadiusBottomStart="19dp"
                app:boxCornerRadiusTopEnd="19dp"
                app:hintAnimationEnabled="true"
                android:autofillHints="emailAddress"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="@color/white"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="5dp"
                    android:layout_height="52dp"
                    android:hint="E-mail ID"
                    android:textSize="15dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="20dp"
                app:boxCornerRadiusTopStart="19dp"
                app:boxCornerRadiusBottomEnd="19dp"
                app:boxCornerRadiusBottomStart="19dp"
                app:boxCornerRadiusTopEnd="19dp"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="@color/white"
                >


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textSize="15dp"
                    android:hint="Password"

                    />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_registernow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User?Register Now"
                android:layout_marginLeft="20dp"
                android:textStyle="italic"
                android:textSize="10sp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_login"
                android:layout_width="90dp"
                android:layout_height="42dp"
                android:text="Login"
                android:background="@drawable/round_button"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#97F7A100"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="2dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="2dp"
                    android:background="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"/>
                <View
                    android:layout_width="120dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="2dp"
                    android:background="@android:color/black"
                    />
            </LinearLayout>

            <!-- res/layout/image_in_box.xml -->
            <androidx.cardview.widget.CardView
                android:layout_width="45dp"
                android:layout_marginTop="15dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#00FFFFFF"
                android:elevation="15dp"
                app:cardElevation="4dp">

                <ImageView

                    android:id="@+id/btn_google"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/google_logo_9825" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>