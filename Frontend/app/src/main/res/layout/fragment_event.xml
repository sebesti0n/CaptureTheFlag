<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EventFragment">

<com.google.android.material.button.MaterialButton
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/btn_registeredEvent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:text="Register"
    app:cornerRadius="8dp"
    android:textSize="25sp"
    android:textStyle="bold"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    android:backgroundTint="@color/ic_blue"
    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_registeredEvent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/countDownTimer"
                android:layout_margin="5dp"
                android:text="YYYY:MM:DD:HH:MM:SS"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/event_banner"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/upload_banner"
                android:id="@+id/event_banner"
                android:scaleType="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/event_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/event_title"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/event_banner"
                app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
                android:gravity="start"
                android:paddingVertical="12dp"
                android:paddingStart="10dp"
                android:id="@+id/event_title_tv"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/robotobold"
                />
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_desc_tv"
                android:layout_margin="5dp"
                android:text="content"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:paddingHorizontal="5dp"
                android:lineSpacingExtra="1dp"
                app:layout_constraintTop_toBottomOf="@+id/countDownTimer"
                app:layout_constraintLeft_toLeftOf="parent"
               />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>