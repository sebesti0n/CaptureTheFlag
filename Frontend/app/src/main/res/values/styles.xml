<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawerMenuItemStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="customTimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorAccent">@color/green</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="background">@color/transparent</item>
    </style>
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="DialogAnimation" >
        <item name="android:windowEnterAnimation">@anim/sheet_in</item>
        <item name="android:windowExitAnimation">@anim/sheet_out</item>
    </style>
    <style name="EventImageView" parent="">
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomLeft">16dp</item>
    </style>
    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="ImageView.Rounded" parent="">
        <item name="cornerSize">7%</item>
    </style>
</resources>